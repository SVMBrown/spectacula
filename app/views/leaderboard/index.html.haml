%center
  %h1
  %h1
    Leaderboards
  %table{:class => "tables"}
    %thead
      %tr
        %th User
        %th Wins
        %th Losses
        %th Games Played
        %th Win Rate
    -@users.sort{|a, b| a.total_wins <=> b.total_wins}
    -@users.each do | user |
      %tr
        %td{"data-th" => "User"}
          =user.handle
        %td{"data-th" => "Wins"}
          =user.total_wins
        %td{"data-th" => "Losses"}
          =user.total_losses
        %td{"data-th" => "Games Played"}
          =user.total_games
        %td{"data-th" => "Win Rate"}
          ='%02f' % (user.win_rate * 100) + '%'


